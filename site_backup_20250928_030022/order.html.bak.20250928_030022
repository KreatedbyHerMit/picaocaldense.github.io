    <script>
        async function submitOrder() {
            const name = document.getElementById("name").value;
            const contact = document.getElementById("contact").value;
            const items = Array.from(document.querySelectorAll(".product")).map(p => ({
                id: p.dataset.id,
                quantity: parseInt(p.querySelector("input").value)
            })).filter(i => i.quantity > 0);

            const res = await fetch("/place_order", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ name, contact, items })
            });
            const data = await res.json();
            alert(data.message);
        }
    </script>
</head>
<body>
    <h1>Place Your Order</h1>
    <div class="container">
        <input id="name" placeholder="Your Name">
        <input id="contact" placeholder="Your Contact">
        <h2>Products:</h2>
        
        <button onclick="submitOrder()">Submit Order</button>
    </div>
